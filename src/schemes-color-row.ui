<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="SchemesColorRow" parent="AdwActionRow">
    <property name="activatable-widget">button</property>
    <child type="prefix">
      <object class="GtkButton" id="remove">
        <property name="icon-name">edit-delete-symbolic</property>
        <property name="halign">center</property>
        <property name="valign">center</property>
        <property name="tooltip-text" translatable="yes">Remove color from palette</property>
        <signal name="clicked" handler="on_remove_clicked_cb" swapped="true"/>
        <style>
          <class name="circular"/>
          <class name="flat"/>
        </style>
      </object>
    </child>
    <child type="suffix">
      <object class="AdwEntryRow" id="label">
        <property name="title" translatable="yes">Name of color</property>
        <signal name="changed" handler="on_remove_clicked_cb" swapped="true"/>
      </object>
    </child>
    <child>
      <object class="GtkColorButton" id="button">
        <property name="use-alpha">true</property>
        <property name="halign">end</property>
        <property name="valign">center</property>
      </object>
    </child>
  </template>
</interface>
